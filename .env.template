# Dispatcharr Stream Manager Environment Configuration
# Copy this file to .env and update with your values

# Dispatcharr Connection (Required)
DISPATCHARR_BASE_URL="http://your-dispatcharr-instance.com:9191"
DISPATCHARR_USER="your-username"
DISPATCHARR_PASS="your-password"
DISPATCHARR_TOKEN=''  # Will be auto-populated after login

# API Server Configuration (Optional - defaults shown)
API_HOST=0.0.0.0
API_PORT=5000
# Debug mode: Set to 'true' for detailed logging (development/troubleshooting only)
# See docs/DEBUG_MODE.md for details
DEBUG_MODE=false

