# Dispatcharr Stream Manager Environment Configuration
# Copy this file to .env and update with your values

# Dispatcharr Connection (Required)
DISPATCHARR_BASE_URL="http://your-dispatcharr-instance.com:9191"
DISPATCHARR_USER="your-username"
DISPATCHARR_PASS="your-password"
DISPATCHARR_TOKEN=''  # Will be auto-populated after login

# API Server Configuration (Optional - defaults shown)
API_HOST=0.0.0.0
API_PORT=5000
# Debug mode: Set to 'true' for detailed logging (development/troubleshooting only)
# See docs/DEBUG_MODE.md for details
DEBUG_MODE=false

# Redis Configuration (Optional - defaults for All-In-One container)
# Note: In All-In-One mode, Redis runs on localhost within the container
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Token Validation Cache TTL (Optional - default: 60 seconds)
# Controls how long a validated token is cached before revalidation.
# Increasing this value reduces API calls for token validation.
# Set to 0 to disable caching (validate on every request).
TOKEN_VALIDATION_TTL=60

