# Development Dockerfile for Backend
FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Create working directory
WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir --trusted-host pypi.org --trusted-host files.pythonhosted.org -r requirements.txt

# Install development dependencies
RUN pip install --no-cache-dir watchdog flask-cors

# Create necessary directories
RUN mkdir -p csv logs data

# Set environment variable for config directory
ENV CONFIG_DIR=/app/data
ENV FLASK_ENV=development
ENV PYTHONUNBUFFERED=1

# Expose Flask port
EXPOSE 5000

# Start Flask API directly with hot-reload
CMD ["python3", "web_api.py", "--host", "0.0.0.0", "--port", "5000", "--debug"]
